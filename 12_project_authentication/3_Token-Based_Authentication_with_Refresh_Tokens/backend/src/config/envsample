# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/yourdbname?retryWrites=true&w=majority

# JWT Authentication (for login tokens)
JWT_SECRET=yourSuperSecretPrivateKey
JWT_EXPIRE=30d            # Token expiration time (like 30 days)

# Refresh Token Secret (if using refresh tokens)
JWT_REFRESH_SECRET=yourRefreshTokenSecretKey
JWT_REFRESH_EXPIRE=7d     # Refresh token expiry

# Email Service Configuration (optional if sending emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=yourEmail@example.com
EMAIL_PASS=yourEmailPassword

# Cloud Storage (optional if uploading images, e.g., Cloudinary)
CLOUDINARY_CLOUD_NAME=yourCloudName
CLOUDINARY_API_KEY=yourApiKey
CLOUDINARY_API_SECRET=yourApiSecret

# Frontend URL (for CORS and redirect after login)
CLIENT_URL=https://yourfrontenddomain.com

# Stripe Payment Gateway (optional if using payments)
STRIPE_SECRET_KEY=yourStripeSecretKey
STRIPE_PUBLIC_KEY=yourStripePublicKey
